job "cadvisor" {
  datacenters = ["dc1"]
  type = "service"

  group "cadvisor" {

    task "cadvisor" {
      driver = "docker"

      config {
        image = "google/cadvisor"
        force_pull = true
        port_map {
          http = 8080
        }
        logging {
          type = "journald"
          config {
            tag = "CADVISOR"
          }
        }
      }

      service {
        name = "cadvisor"
        port = "http"
      }

      resources {
        network {
          port "http" {
		    static = "8080" 
		  }
        }
      }
    }
  }
}