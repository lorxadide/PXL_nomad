---
scrape_configs:
  # Prometheus
  - job_name: 'prometheus'
    scrape_interval: 5s
    target_groups:
      - targets: ['127.0.0.1:9090']

  # Node exporter
  - job_name: 'node_exporters'
    scrape_interval: 5s
    target_groups:
      - targets: ['192.168.1.2:9100']
	  - targets: ['192.168.1.3:9100']
	  - targets: ['192.168.1.4:9100']
	  
  # Server
  - job_name: 'server'
	scrape_interval: 5s
	target_groups:
	  - targets: ['192.168.1.2:2222']
  
  # Agent
  - job_name: 'clients'
    scrape_interval: 5s
    target_groups:
      - targets: ['192.168.1.3:2200']
	  - targets: ['192.168.1.4:2201']

